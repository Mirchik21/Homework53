@using Microsoft.AspNetCore.Identity
@inject UserManager<User> userManager
@model Lesson49MVC.Models.User
@{
    ViewData["Title"] = "Index";
}

<h1>Profile Details</h1>

<div>
    <h4>@User.Identity.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
    </dl>
</div>
<form asp-controller="Users" asp-action="Delete" asp-route-id="@userManager.GetUserId(User)" method="post">
    <a class="btn btn-sm btn-primary" asp-controller="Users" asp-action="Edit" asp-route-id="@userManager.GetUserId(User)">Изменить</a>
    <a class="btn btn-sm btn-primary" asp-controller="Users" asp-action="ChangePassword" asp-route-id="@userManager.GetUserId(User)">Сменить пароль</a>
    <button type="submit" class="btn btn-sm btn-danger">
        Удалить
    </button>
</form>
    